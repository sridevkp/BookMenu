{
  "manifest_version": 3,
  "name": "BookMenu",
  "version": "1.0",
  "description": "Bookmarks as Apps: Easily accesss favourite sites on new tab",

  "permissions": ["bookmarks","favicon"],

  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
